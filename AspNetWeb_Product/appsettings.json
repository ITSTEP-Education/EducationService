{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Error"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Enrichers.CorrelationId",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Process",
      "Serilog.Enrichers.Thread",
      "Serilog.Formatting.Compact"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore.Server": "Information",
        "Microsoft.AspNetCore": "Error",
        "Microsoft.EntityFrameworkCore.Database": "Error"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithCorrelationId",
      "WithMachineName",
      "WithEnvironmentUserName",
      "WithProcessName"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Level:u3} {SourceContext} {EventId}] {Message:lj} {NewLine}"
        }
      },
      {
        "Name": "Debug",
        "Args": {
          "outputTemplate": "[{Level:u3} {SourceContext} {EventId}] {Message:lj} {NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "../Logs/ProductItem.log",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3} {SourceContext} {EventId}] [{CorrelationId} {MachineName} {EnvironmentUserNamee} {ProcessName}] {Message:lj} {NewLine} {Exception}",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "buffered": false,
          "fileSizeLimitBytes": 25000,
          "retainedFileCountLimit": 1
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultDbConnection": "data source=DESKTOP-9C2MS1P\\SQLEXPRESS; Database=products; Trusted_Connection=TRUE; MultipleActiveResultSets=TRUE; TrustServerCertificate=True;"
  }
}
