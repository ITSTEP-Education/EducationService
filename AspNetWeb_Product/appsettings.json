{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Error"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Enrichers.CorrelationId",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Process",
      "Serilog.Enrichers.Thread",
      "Serilog.Formatting.Compact"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore.Server": "Information",
        "Microsoft.AspNetCore": "Error",
        "Microsoft.EntityFrameworkCore.Database": "Error"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithCorrelationId",
      "WithMachineName",
      "WithEnvironmentUserName",
      "WithProcessName"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Level:u3} {SourceContext} {EventId}] {Message:lj} {NewLine}"
        }
      },
      {
        "Name": "Debug",
        "Args": {
          "outputTemplate": "[{Level:u3} {SourceContext} {EventId}] {Message:lj} {NewLine}"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "ConnectionString": "data source=DESKTOP-9C2MS1P\\SQLEXPRESS; Database=products; Trusted_Connection=TRUE; MultipleActiveResultSets=TRUE; TrustServerCertificate=True;",
          "tableName": "productitemslog",
          "autoCreateSqlTable": true,
          "columnOptionsSection": {
            "disableDefaults": true,
            "removeStandardColumns": [ "MessageTemplate", "Properties", "Exception" ],
            "customColumns": [
              {
                "ColumnName": "CorrelationId",
                "PropertyName": "CorrelationId",
                "DataType": "nvarchar",
                "DataLength": 100,
                "NonClusteredIndex": true
              },
              {
                "ColumnName": "EnvUserName",
                "PropertyName": "EnvironmentUserName",
                "DataType": "nvarchar",
                "DataLength": 50
              }
              //{
              //  "ColumnName": "Code",
              //  "PropertyName": "EventId",
              //  "DataType": "int",
              //  "AllowNull":  true
              //}
            ],
            "Message": {
              "columnName": "msg"
            }
          }
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "../Logs/ProductItem.log",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3} {SourceContext} {EventId}] [{CorrelationId} {MachineName} {EnvironmentUserName} {ProcessName}] {Message:lj} {NewLine} {Exception}",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "buffered": false,
          "fileSizeLimitBytes": 25000,
          "retainedFileCountLimit": 1
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultDbConnection": "data source=DESKTOP-9C2MS1P\\SQLEXPRESS; Database=products; Trusted_Connection=TRUE; MultipleActiveResultSets=TRUE; TrustServerCertificate=True;"
  }
}
